{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "outDir": "./dist",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    },
    "lib": [ "es2019", "DOM" ]
  },
  "include": [
    "src/**/*",
    "custom.d.ts"
  ]
}