{
	"compilerOptions": {
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "ES2017",
		"declaration": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"lib": [ "es2021", "DOM" ],
		"baseUrl": "src"
	},
	"include": [
		"src/**/*",
    "custom.d.ts"
	]
}
